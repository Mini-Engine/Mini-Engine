{
    "name": "angry-pixel",
    "version": "1.0.1",
    "description": "Lightweight 2D game engine made with TypeScript.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib/index.esm.js",
    "scripts": {
        "build": "rollup -c",
        "clean": "tsc --build --clean",
        "prepare": "npm run build",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier-format": "prettier --write 'src/**/*.{ts,js,css,html}'",
        "prettier-check": "prettier --check 'src/**/*.{ts,js,css,html}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/angry-pixel-engine/angry-pixel-engine.git"
    },
    "homepage": "https://github.com/angry-pixel-engine/angry-pixel-engine",
    "keywords": [
        "angry pixel",
        "game engine",
        "video games",
        "engine",
        "2d engine",
        "webgl",
        "canvas",
        "typescript",
        "game development"
    ],
    "author": "Mauro Cristy <maurocristy@gmail.com>",
    "contributors": [
        "Nahuel Cirocco <nahuel.cirocco@gmail.com>"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "eslint": "^7.30.0",
        "prettier": "^2.1.2",
        "rollup": "^2.49.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "gl-matrix": "^3.3.0"
    }
}
