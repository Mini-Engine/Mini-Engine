{
    "name": "mini-engine",
    "version": "1.0.0",
    "description": "Lightweight 2D game engine made with TypeScript.",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc --build",
        "clean": "tsc --build --clean",
