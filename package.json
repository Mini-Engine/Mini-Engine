    "license": "MIT",
    "devDependencies": {
        "@types/crypto-js": "^4.0.1",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "eslint": "^7.9.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "crypto-js": "^4.0.0",
