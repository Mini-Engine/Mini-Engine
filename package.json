{
    "name": "mini-engine",
    "version": "1.0.0",
    "description": "Lightweight 2D game engine made with TypeScript.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "prepare": "npm run build",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier": "prettier --write 'src/**/*.{ts,js,css,html}'",
        "prettier-check": "prettier --check 'src/**/*.{ts,js,css,html}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mini-engine/mini-engine.git"
    },
    "homepage": "https://mini-engine.co",
    "keywords": [
        "game-engine",
        "videogame",
        "engine",
        "2d-engine",
        "webgl",
        "canvas",
        "typescript"
    ],
    "author": "Mauro Cristy <maurocristy@gmail.com>",
    "contributors": [
        "Nahuel Cirocco <nahuel.cirocco@gmail.com>"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.0.1",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "eslint": "^7.26.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "gl-matrix": "^3.3.0",
        "uuid": "^8.3.2"
    }
