{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "lib": ["ES2020", "dom"],
    "declaration": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "suppressExcessPropertyErrors": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
