{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es2020", "dom" ],
    "declaration": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "suppressExcessPropertyErrors": true,
    "moduleResolution": "Node",
    "esModuleInterop": true 
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
